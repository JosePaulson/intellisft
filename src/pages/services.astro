        <div class="md:w-1/2 bg-[#0003] bg-blend-darken bg-[url('/src/images/digitaltrans.jpg')] bg-cover bg-no-repeat bg-center]"></div>
        <div class="bg-[#fff] md:w-1/2 px-8 py-8 sm:px-12 sm:py-16 md:border-l-4 border-black">
