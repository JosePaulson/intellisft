---
import Layout from "../layouts/Layout.astro"
---

<Layout title="Serivices | Intellisoft">
    
<div id="controls-carousel" class="relative w-full" data-carousel="slide">
    <!-- Carousel wrapper -->
    <div class="relative h-56 overflow-hidden md:h-[65vh] bg-[#000]">
         <!-- Item 1 -->
        <div class="hidden duration-[1200ms] ease-in-out" data-carousel-item>
            <img src="/src/images/image1.jpg" class="opacity-70 absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
        </div>
        <!-- Item 2 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item="active">
            <img src="/src/images/image2.jpg" class="opacity-70 absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
        </div>
        <!-- Item 3 -->
        <div class="hidden duration-700 ease-in-out" data-carousel-item>
            <img src="/src/images/image3.jpg" class="opacity-70 absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt="...">
        </div>
        <div class="absolute inset-0 z-30 flex items-end justify-center md:hidden">
            <div>
                <h2 class="text-center text-3xl md:text-4xl text-[#fff] mt-7 sm:mt-16 font-bold">SERVICES</h2>
                <div class="bg-[#e0aa3a] h-2 w-32 mx-auto mb-8"></div>
            </div>
        </div>
    </div> 
</div>
<div class="hidden md:block">
